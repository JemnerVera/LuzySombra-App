# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_SHEET_NAME=Data-app
GOOGLE_SHEETS_CREDENTIALS_BASE64=your_credentials_base64_here
GOOGLE_SHEETS_TOKEN_BASE64=your_token_base64_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# SQL Server Configuration
# IMPORTANTE: Configurar estas variables en .env.local (NO commitear .env.local)
SQL_SERVER=your_server_ip_or_hostname
SQL_DATABASE=your_database_name
SQL_PORT=1433
SQL_ENCRYPT=true

# SQL Server Authentication
# Para servidor AgroMigiva: usar ucown_powerbi_desa para escritura, ucser_powerbi_desa para lectura
SQL_USER=your_sql_user
SQL_PASSWORD=your_sql_password

# Data Source Configuration
# Options: 'sql' (only SQL Server), 'sheets' (only Google Sheets), 'hybrid' (both, SQL primary)
DATA_SOURCE=sql

# Development
NODE_ENV=development
